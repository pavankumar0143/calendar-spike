    "turbo": "latest",
    "typescript": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.2.3"
}
